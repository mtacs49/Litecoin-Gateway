                    <div class="clearfix"> </div>
                </form>
                
            </div> 
                
                <div class="clearfix"> </div>
                <span id='txid'></span>        	         
        </div>
        <script>
            $(document).ready(function(){
                $("#btn").click(function(){
                    var account = $('#account').val();
                    var address = $('#shopaddress').val();
                    var amount = $('#amount').val();
                    //alert("Send from: " + account + ' to ' + address );
                    $.post('/api/sendfrom', {
                        account: account,
                        address: address,
                        amount: amount
                        },
                        function(data,status){
                            if(data.code == null){
                                alert("Tạo giao dịch thành công, đang chờ tạo block");
                                $("#txid").html("<a href='/transaction/"+ data.txid +"'>"+ data.txid +"</a>");
                            }else{
                                alert("Không đủ tiền để thực hiện giao dịch");
                            }
                            
                    });
                });
            });
           
        </script>
