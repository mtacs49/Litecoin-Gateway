            <div class="register">
                    <form> 
                        <div class="  register-top-grid">
                            <h3>THÔNG TIN THANH TOÁN</h3>
                            <div class="mation">
                                <span>Tên tài khoản<label>*</label></span>
                                <input type="text" id='account' value=""> 
                            
                                <span>Shop litecoin Address<label>*</label></span>
                                <input type="text", value='<%= address %>', id='shopaddress'> 
    
                                <span>Số lượng(LTE)<label>*</label></span>
                                <input type="text" id='amount'> 
                            </div>
                            <div class="clearfix"> </div>
                            
                        </div>
